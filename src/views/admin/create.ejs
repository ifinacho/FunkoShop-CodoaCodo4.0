<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/index.css" />
    <title>Crear item</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>

    <main class="container">
      <form action="/admin/create" method="POST" class="create__form" enctype="multipart/form-data">
        <ul class="create__form__ul">
          <li><h1 class="create__form__ul--h1">CREAR NUEVO ITEM</h1></li>
          <li
            class="create__form__ul__li--typography create__form__ul__li__div">
            <div>
              Categoría:
              <select name="category" class="create_form_ul--select">
                <option value="" disabled selected hidden>Seleccionar</option>
                <option value="1">Figuras Coleccionables</option>
                <option value="2">Llaveros</option>
                <option value="3">Remeras</option>
              </select>
            </div>
            <div>
              Licencia:
              <select name="licence" class="create_form_ul--select">
                <option value="" disabled selected hidden>Seleccionar</option>
                <option value="1">Pokemon</option>
                <option value="2">Star Wars</option>
                <option value="3">Harry Potter</option>
              </select>
            </div>
          </li>
          <li class="create__form__ul__li--typography">
            <label for="productData">Nombre del producto: </label>
            <input
              type="text"
              name="name"
              placeholder="Kakashi Hatake Shippuden Saga"
              class="create__form--line" />
          </li>
          <li class="create__form__ul__li--typography">
            <textarea id="textarea"
              name="description"
              rows="12.2rem"
              cols="69rem"
              placeholder=" Descripción del producto"></textarea>
          </li>
          <li
            class="create__form__ul__li--typography create__form__ul__li__div2">
            <div>
              <label for="sku">SKU:</label>
              <input
                size="9rem"
                type="text"
                name="sku"
                placeholder="SSK111AB001"
                class="create__form--line" />
            </div>
            <div>
              <label for="precio">Precio:</label>
              <input
                size="5rem"
                type="text"
                name="price"
                placeholder="$0.000,00"
                class="create__form--line" />
            </div>
            <div>
              <label for="stock">Stock:</label>
              <input
                size="5rem"
                type="text"
                name="stock"
                placeholder="0"
                class="create__form--line" />
            </div>
          </li>
          <li
            class="create__form__ul__li--typography create__form__ul__li__div">
            <div>
              <label for="descount">Descuento:</label>
              <input
                type="number"
                id="descount"
                name="discount"
                min="0"
                max="100"
                placeholder="0%"
                size="5rem"
                class="create__form--line" />
            </div>
            <div>
              Cuotas:
              <select name="dues" class="create__form__ul--select">
                <option value="0">Sin cuotas</option>
                <option value="3">3 cuotas sin interés</option>
                <option value="6">6 cuotas sin interés</option>
                <option value="9">9 cuotas sin interés</option>
                <option value="12">12 cuotas sin interés</option>
                <option value="18">18 cuotas sin interés</option>
                <option value="24">24 cuotas sin interés</option>
              </select>
            </div>
          </li>
          <li class="create__form__ul__li--typography">
            <label for="image">Imágenes:</label> <input type="file" name="images" multiple/>
          </li>
        </ul>
        <button
          class="create__form--gap create__form--btn"
          type="submit"
          value="addProduct">
          Agregar Producto
        </button>
        <button
          class="create__form--gap create__form--gap create__form--btn"
          type="reset"
          value="clean">
          Limpiar
        </button>
      </form>
    </main>

 <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
  </body>
</html>
