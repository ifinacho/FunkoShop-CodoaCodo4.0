<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../../css/index.css" />
    <title>Elegí el tuyo!</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <main class="container" >
      <div class="shopContainer">  
        <aside class="sidebar">
        <form action="submit" class="form">
          <ul class="form__items">
            <li class="form__item1">
              <label class="form__label1" for="busquedaProducto">BUSCAR</label>
              <input class="form__input1"
                type="text"
                name="busquedaProducto"
                placeholder="item o categoria" />
            </li>
            <li class="form__item2">
              <span class="form__span2">ORDENAR POR</span>
              <select class="form__select2" name="select">
                <option value="value1" selected>Mayor a menor</option>
                <option value="value2">Menor a Mayor</option>
                <option value="value3">Value 3</option>
                <option value="value4">Value 4</option>
              </select>
            </li>
            <li class="form__item3">
              <span class="form__span3">PRECIO</span>
              <ul class="subitems3">
                <li class="subitems__item3">
                  <label class="subitems__label3" for="precioMinimo">MIN</label>
                  <input class="subitems__input3" type="number" min="0" size="1" name="precioMinimo" placeholder="0" />
                  <span class="subitems__span3">-</span>
                  <label class="subitems__label3" for="precioMaximo">MAX</label>
                  <input class="subitems__input3" type="number" min="0" size="1" name="precioMaximo" placeholder="0" />
                </li>
              </ul>
            </li>
            <li class="form__item4">
              <span class="form__span4">FILTRAR</span>
              <ul class="subitems4">
                <li class="subitem4">
                  <input type="checkbox" name="filtro" value="nuevos" />
                  <label class="subitems__label4" for="filtro">NUEVOS</label>
                </li>
                <li class="subitem4">
                  <input type="checkbox" name="filtro" value="ofertas" />
                  <label class="subitems__label4" for="filtro">OFERTAS</label>
                </li>
                <li class="subitem4">
                  <input type="checkbox" name="filtro" value="edicion_especial" />
                  <label class="subitems__label4" for="filtro">EDICION ESPECIAL</label>
                </li>
                <li class="subitem4">
                  <input type="checkbox" name="filtro" value="favoritos" />
                  <label class="subitems__label4" for="filtro">FAVORITOS</label>
                </li>
              </ul>
            </li>
          </ul>
        </form>
      </aside>

        <section>
          <ul class="main-content">
           <% products.forEach(product => { %>
               <li class="slider__item">
              <article class="card-item">
                <a class="card-item__link" href="/shop/item/<%= product.product_id %>">
                  <picture class="card-item__cover">
                    <span class="card-item__tag">NUEVO</span>
                    <img class="card-item__img--front"
                      src="img/<%= product.image_front %>"
                      alt="Figura coleccionable funko Trooper Star wars" />
                    <img class="card-item__img--back"
                      src="img/<%= product.image_back %>"
                      alt="Figura coleccionable funko Trooper Star wars en caja" />
                  </picture>

                  <div class="card-item__content">
                    <p class="card-item__licence"><%= product.licence_name %></p>
                    <h4 class="card-item__name"><%= product.product_name %></h4>
                    <p class="card-item__price">$ <%= product.price %></p>
                    <p class="card-item__promo"><%= `${product.dues} CUOTAS SIN INTERÉS` %></p>
                  </div>
                </a>
              </article>
            </li>
            <% }) %>
          </ul>
        </section>
       </div>
     <section class="pagination">
          <div class="pagination__div">
            <a class="pagination__link icon"><iconify-icon icon="material-symbols:chevron-left" width="33" height="33">
            </iconify-icon></a>
            <a class="pagination__link active">1</a>
            <a class="pagination__link">2</a>
            <a class="pagination__link">...</a>
            <a class="pagination__link">9</a>
            <a class="pagination__link">10</a>
            <a class="pagination__link icon"><iconify-icon icon="material-symbols:chevron-right" width="33" height="33">
            </iconify-icon></a>
          </div>
        </section>
    </main>
    <%- include('../partials/footer.ejs') %>
  
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script></script>
  </body>
</html>
